@model MovieResponse

@{
    var containerDivClass = "container";
    ViewData["Title"] = "Movie Delete";
}

<div class="@containerDivClass py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                    <small class="text-muted">Please confirm this action. This operation cannot be undone.</small>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        Back to List
                    </a>
                </div>
            </div>

            @if (TempData["Message"] is not null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model is not null)
            {
                <div class="card border-0 shadow-lg rounded-4">
                    <div class="card-body p-4 p-md-5">

                        <div class="d-flex align-items-center mb-4">
                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3 py-2 rounded-pill">
                                Delete Confirmation
                            </span>
                        </div>

                        <h4 class="text-danger mb-3">
                            Are you sure you want to delete this movie?
                        </h4>

                        <p class="text-muted">
                            You are about to permanently remove the following movie:
                        </p>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.Name)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.ReleaseDate)
                            </div>
                            <div class="col-md-8 col-12">
                                @Model.ReleaseDateF
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.TotalRevenue)
                            </div>
                            <div class="col-md-8 col-12">
                                @Model.TotalRevenueF
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.Director)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.Director)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.Genres)
                            </div>
                            <div class="col-md-8 col-12">
                                @if (Model.Genres != null && Model.Genres.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var genre in Model.Genres)
                                        {
                                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle px-3 py-2 rounded-pill">
                                                @genre
                                            </span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No genres assigned</span>
                                }
                            </div>
                        </div>

                        @* Many-to-many example (kept, styled) *@
                        @*
                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                <b>@Html.DisplayNameFor(model => model.Entitys)</b>
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.Raw(Model.Entitys)
                            </div>
                        </div>
                        *@

                        <hr class="my-4" />

                        <form asp-action="Delete">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="Id" />

                            <div class="d-flex flex-wrap gap-2 justify-content-end">
                                <input type="submit" value="Yes, delete movie" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    No, go back
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            }

        </div>
    </div>
</div>
