@model IEnumerable<MovieResponse>

@{
    var containerDivClass = "container";
    ViewData["Title"] = "Movie List";
}

<div class="@containerDivClass py-4">
    <div class="row justify-content-center">
        <div class="col-12">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                    @if (Model is not null)
                    {
                        <small class="text-muted">
                            <span class="badge bg-secondary me-1">@Model.Count()</span>
                            record(s) found.
                        </small>
                    }
                </div>

                <div class="d-flex gap-2">
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle me-1"></i> Create Movie
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-repeat me-1"></i> Refresh
                    </a>
                </div>
            </div>

            @if (TempData["Message"] is not null)
            {
                <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model is not null && Model.Any())
            {
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-3 p-md-4">

                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                                        <th>@Html.DisplayNameFor(m => m.ReleaseDate)</th>
                                        <th>@Html.DisplayNameFor(m => m.TotalRevenue)</th>
                                        <th>@Html.DisplayNameFor(m => m.Director)</th>
                                        <th>@Html.DisplayNameFor(m => m.Genres)</th>
                                        <th class="text-end" style="width: 220px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@item.Name</td>
                                            <td>@item.ReleaseDateF</td>
                                            <td>@item.TotalRevenueF</td>
                                            <td>@item.Director</td>
                                            <td>
                                                @if (item.Genres != null && item.Genres.Any())
                                                {
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var genre in item.Genres)
                                                        {
                                                            <span class="badge bg-primary-subtle text-primary border border-primary-subtle rounded-pill">
                                                                @genre
                                                            </span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic small">None</span>
                                                }
                                            </td>

                                            <td class="text-end">
                                                <div class="d-flex justify-content-end gap-2">

                                                    <a asp-action="Add"
                                                       asp-controller="Favourites"
                                                       asp-route-productId="@item.Id"
                                                       class="btn btn-light border shadow-sm btn-sm rounded-circle"
                                                       title="Add to favourites">
                                                        <i class="bi bi-heart"></i>
                                                    </a>


                                                    <a asp-action="Details" asp-route-id="@item.Id"
                                                       class="btn btn-light border shadow-sm btn-sm rounded-circle"
                                                       title="View details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>

                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-primary btn-sm rounded-circle"
                                                       title="Edit movie">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>

                                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                                       class="btn btn-danger btn-sm rounded-circle"
                                                       title="Delete movie">
                                                        <i class="bi bi-trash"></i>
                                                    </a>

                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning mt-3">
                    No records found.
                </div>
            }

        </div>
    </div>
</div>
