@model GroupRequest

@{
    ViewBag.Title = "Edit Group";
}

<h1>@ViewBag.Title</h1>

<p class="text-success">
    @ViewBag.Message
</p>

@* Show the form if group request Model object is not returned null from the Edit action of Groups controller *@
@if (Model is not null)
{
    @* HTML form for sending group request data to the Groups controller's Update POST action. *@
    <form asp-action="Edit">

        @* Way 1: HTML Helper *@
        @* @Html.HiddenFor(groupRequest => groupRequest.Id) *@
        @* Way 2: Tag Helper, we need to send the GroupRequest Model's Id property value to the post Edit action for the update operation *@
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-2">
                <label asp-for="Title"></label>
            </div>
            <div class="col-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col-10">
            </div>
        </div>
        <div class="row">
            <div class="offset-2 col-10">
                <button type="submit" class="btn btn-primary">Update</button>
                &nbsp;
                <button type="reset" class="btn btn-outline-primary">Reset</button>
            </div>
        </div>
    </form>
}
<hr />
<a asp-action="Index" class="btn btn-outline-warning">Back to Group List</a>