@model IEnumerable<RoleResponse>

@{
    var containerDivClass = "container";
    ViewData["Title"] = "Role List";
}

<div class="@containerDivClass py-4">
    @if (Model is not null)
    {
        <form asp-action="Index" autocomplete="off">
            <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-9">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                            <small class="text-muted">
                                @Model.Count() record(s) found.
                            </small>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-primary">
                                + Create Role
                            </a>
                        </div>
                    </div>

                    @if (TempData["Message"] is not null)
                    {
                        <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
                            @TempData["Message"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="card shadow-sm border-0 rounded-4">
                        <div class="card-body p-0">

                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                                            <th class="text-end" style="width: 180px;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="fw-semibold">
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td class="text-end">

                                                    <div class="d-flex justify-content-end gap-2">

                                                        <a asp-action="Details" asp-route-id="@item.Id"
                                                           class="btn btn-light border shadow-sm btn-sm rounded-circle"
                                                           title="View details">
                                                            <i class="bi bi-eye"></i>
                                                        </a>

                                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                                           class="btn btn-primary btn-sm rounded-circle"
                                                           title="Edit role">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>

                                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                                           class="btn btn-danger btn-sm rounded-circle"
                                                           title="Delete role">
                                                            <i class="bi bi-trash"></i>
                                                        </a>

                                                    </div>

                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </form>
    }
</div>
