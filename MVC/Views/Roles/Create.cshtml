@model RoleRequest

@* Generated from Custom MVC Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container"; // "container-fluid" can be used for full width
    var dateTimePickerClass = "datetimepicker"; // "jquery-datetimepicker" must be added as client side library
    ViewData["Title"] = "Role Create";
}

<div class="@containerDivClass py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                    <small class="text-muted">Create a new role to assign to users.</small>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        Back to List
                    </a>
                </div>
            </div>

            @if (TempData["Message"] is not null)
            {
                @* TempData is used to carry extra data to the redirected controller action's view. *@
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <form asp-action="Create" autocomplete="off" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        @* Use ModelOnly instead of All to see only service response messages in validation summary *@

                        <div class="row mb-3">
                            <label asp-for="Name" class="col-md-3 col-12 col-form-label fw-semibold"></label>
                            <div class="col-md-9 col-12">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                        </div>

                        @* Many-to-many relationships template (kept as comment, just like original) *@
                        @*
                        <div class="row mb-3">
                            <label asp-for="EntityIds" class="col-md-3 col-12 col-form-label fw-semibold"></label>
                            <div class="col-md-9 col-12">
                                <select multiple asp-for="EntityIds" class="form-select" asp-items="ViewBag.EntityIds"></select>
                                <span asp-validation-for="EntityIds" class="text-danger small"></span>
                            </div>
                        </div>
                        *@

                        <hr class="my-4" />

                        <div class="d-flex flex-wrap gap-2 justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                Save
                            </button>
                            <button type="reset" class="btn btn-outline-primary">
                                Reset
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to List
                            </a>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @* Can be uncommented to use client-side validation using jQuery instead of server-side validation. *@
    @*<partial name="_ValidationScriptsPartial" />*@
}
