@model UserResponse

@* Generated from Custom MVC Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container"; // "container-fluid" can be used for full width
    ViewData["Title"] = "User Details";
}

<div class="@containerDivClass py-4">
    <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-9">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                    <small class="text-muted">View detailed information about this user.</small>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        Back to List
                    </a>
                </div>
            </div>

            @if (TempData["Message"] is not null)
            {
                @* TempData is used to carry extra data to the redirected controller action's view. *@
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    @TempData["Message"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (Model is not null)
            {
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.UserName)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.UserName)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.Password)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.Password)
                            </div>
                        </div>

                        @* Instead of seperate first name and last name, full name is used *@
                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.FullName)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.FullName)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.GenderF)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.GenderF)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.BirthDateF)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.BirthDateF)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.RegistrationDateF)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.RegistrationDateF)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.ScoreF)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.ScoreF)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.IsActiveF)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.IsActiveF)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.Address)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.Address)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.Group)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.Group)
                            </div>
                        </div>

                        @* Many to many relationship display (roles). Raw HTML Helper may be used if string parameter has HTML tags. *@
                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.RoleList)
                            </div>
                            <div class="col-md-8 col-12">
                                @* Way 2 from your template, kept as-is (only layout changed) *@
                                @string.Join(", ", Model.Roles)
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.Country)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.Country)
                            </div>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-4 col-12 text-muted fw-semibold">
                                @Html.DisplayNameFor(model => model.City)
                            </div>
                            <div class="col-md-8 col-12">
                                @Html.DisplayFor(model => model.City)
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex flex-wrap gap-2 justify-content-end">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                Delete
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Back to List
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</div>
