@model IEnumerable<UserResponse>

@* Generated from Custom MVC Template. *@
@* Model namespace using directive should be added to _ViewImports.cshtml. *@

@{
    var containerDivClass = "container"; // "container-fluid" can be used for full width
    ViewData["Title"] = "User List";
}

<div class="@containerDivClass py-4">

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-1">@ViewData["Title"]</h1>
                @if (Model is not null)
                {
                    <small class="text-muted">
                        @Model.Count() record(s) found.
                    </small>
                }
            </div>
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    + Create User
                </a>
            </div>
        </div>
    </div>

    @if (TempData["Message"] is not null)
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info mb-0">
                    @TempData["Message"]
                </div>
            </div>
        </div>
    }

    @if (Model is not null && Model.Any())
    {
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-body p-0">

                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                <th>@Html.DisplayNameFor(model => model.RegistrationDateF)</th>
                                <th>@Html.DisplayNameFor(model => model.IsActiveF)</th>
                                <th>@Html.DisplayNameFor(model => model.Group)</th>
                                @if (User.IsInRole("Admin"))
                                {
                                    <th>@Html.DisplayNameFor(model => model.RoleList)</th>
                                }
                                <th class="text-end" style="width: 220px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RegistrationDateF)
                                    </td>
                                    <td>
                                        @* If IsActiveF is a string like "Active"/"Passive" you can still style it *@
                                        @if (item.IsActiveF?.ToString().ToLower().Contains("active") == true)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2 rounded-pill">
                                                @item.IsActiveF
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle px-3 py-2 rounded-pill">
                                                @item.IsActiveF
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Group)
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            @if (item.RoleList is not null && item.RoleList.Any())
                                            {
                                                foreach (var role in item.RoleList)
                                                {
                                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle me-1 mb-1">
                                                        @role.Name
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">No roles</span>
                                            }
                                        </td>
                                    }
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">

                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-light border shadow-sm btn-sm rounded-circle"
                                               title="View details">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-primary btn-sm rounded-circle"
                                               title="Edit user">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-danger btn-sm rounded-circle"
                                               title="Delete user">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-3">
            No records found.
        </div>
    }

</div>
