@model APP.Models.UserRegisterRequest

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="text-center mb-4">
                <h1 class="fw-bold">@ViewData["Title"]</h1>
                <p class="text-muted mb-0">Create your account in a few seconds.</p>
            </div>

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <input asp-for="UserName" class="form-control form-control-lg" placeholder="Enter your username (3-30 characters)" />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password (4-15 characters)" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Re-enter your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            Create Account
                        </button>

                        <div class="text-center">
                            <small class="text-muted">
                                Already have an account?
                                <a asp-action="Login" class="fw-semibold">Login here</a>
                            </small>
                        </div>
                    </form>

                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-sm">
                    Back to Home
                </a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
